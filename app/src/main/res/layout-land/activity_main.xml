<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue_background_color"
    tools:context="leodevelopments.aboutme2.MainActivity">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:id="@drawable/mp"
        android:src="@drawable/mp"
        android:translationZ="10dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/my_fio"
        android:id="@+id/textView_fio"
        android:translationZ="10dp"
        android:gravity="center"
        android:shadowColor="@color/blue_color"
        android:layout_below="@drawable/mp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@drawable/mp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/my_email"
        android:id="@+id/textView_email"
        android:translationZ="8dp"
        android:gravity="center"
        android:layout_below="@+id/textView_fio"
        android:layout_alignStart="@+id/textView_fio"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="1000dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/arrayView"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/primer1"
        android:layout_above="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt1"
        android:id="@+id/primer1"
        android:textSize="@dimen/header_1"
        android:textColor="@color/yellow_color"
        android:layout_below="@+id/section_label"
        android:layout_toStartOf="@drawable/mp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt2"
        android:id="@+id/primer2"
        android:textSize="@dimen/header_2"
        android:textColor="@color/red_color"
        android:layout_below="@+id/primer1"
        android:layout_alignStart="@+id/primer1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt3"
        android:id="@+id/primer3"
        android:textSize="@dimen/header_3"
        android:textColor="@color/blue_color"
        android:layout_below="@+id/primer2"
        android:layout_alignStart="@+id/primer2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/simple_text"
        android:id="@+id/simple_text"
        android:layout_below="@+id/primer3"
        android:layout_toEndOf="@+id/arrayView" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/andr"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/primer2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/andr"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
