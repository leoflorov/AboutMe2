<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mp"
        android:src="@drawable/mp"
        android:visibility="visible"
        android:layout_above="@+id/textView_fio"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/my_fio"
        android:id="@+id/textView_fio"
        android:gravity="center"
        android:shadowColor="@color/blue_color"
        android:layout_above="@+id/textView_email"
        android:layout_alignEnd="@+id/mp"
        android:layout_toEndOf="@+id/arrayView"
        android:layout_alignStart="@+id/mp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/my_email"
        android:id="@+id/textView_email"
        android:gravity="center"
        android:layout_alignStart="@+id/textView_fio"
        android:layout_alignBottom="@+id/primer3"
        android:layout_alignEnd="@+id/textView_fio" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="1000dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/arrayView"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_alignBottom="@+id/mp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt1"
        android:id="@+id/primer1"
        android:textSize="@dimen/header_1"
        android:textColor="@color/yellow_color"
        android:layout_alignTop="@+id/textView_fio"
        android:layout_toEndOf="@+id/section_label" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt2"
        android:id="@+id/primer2"
        android:textSize="@dimen/header_2"
        android:textColor="@color/red_color"
        android:layout_alignBottom="@+id/textView_fio"
        android:layout_alignStart="@+id/primer1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primer_txt3"
        android:id="@+id/primer3"
        android:textSize="@dimen/header_3"
        android:textColor="@color/blue_color"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/primer2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/simple_text"
        android:id="@+id/simple_text"
        android:layout_below="@+id/primer3"
        android:layout_alignStart="@+id/primer3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:id="@+id/checkBox"
        android:checked="true"
        android:layout_below="@+id/textView_email"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:src="@drawable/andr"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

</RelativeLayout>